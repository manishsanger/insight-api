FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Set environment to development to preserve console logs
ENV NODE_ENV=development

# Start development server instead of building
CMD ["npm", "start"]

# Create data directory
RUN mkdir -p /app/data

# Expose port
EXPOSE 8651
