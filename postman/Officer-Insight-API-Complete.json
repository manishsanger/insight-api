    {
      "name": "Text & Audio Processing",
      "item": [
        {
          "name": "Parse Text Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has extracted info\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('extracted_info');",
                  "    pm.expect(jsonData).to.have.property('text');",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "message",
                  "value": "Officer Johnson reporting traffic violation. Red Honda Civic plate ABC123 speeding in school zone. Driver name is John Smith, male, DOB 15/03/1990, address 123 Main Street, London.",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/parse-message",
              "host": ["{{base_url}}"],
              "path": ["parse-message"]
            }
          }
        },
        {
          "name": "Parse Audio Message",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has extracted info from audio\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('extracted_info');",
                  "    pm.expect(jsonData).to.have.property('text');",
                  "    pm.expect(jsonData).to.have.property('id');",
                  "    pm.expect(jsonData.has_audio).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "audio_message",
                  "type": "file",
                  "src": "../test-data/traffic-offence-report.wav",
                  "description": "Upload the traffic offence report audio file from test-data directory"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/parse-message",
              "host": ["{{base_url}}"],
              "path": ["parse-message"]
            }
          }
        },
        {
          "name": "Parse Mixed Input (Text + Audio)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response prioritizes audio over text\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('extracted_info');",
                  "    pm.expect(jsonData).to.have.property('text');",
                  "    pm.expect(jsonData.has_audio).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "message",
                  "value": "This text should be ignored when audio is present",
                  "type": "text"
                },
                {
                  "key": "audio_message",
                  "type": "file",
                  "src": "../test-data/traffic-offence-report.wav",
                  "description": "Audio takes priority over text input"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/parse-message",
              "host": ["{{base_url}}"],
              "path": ["parse-message"]
            }
          }
        }
      ]
